<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}{% endblock %}
        <link rel="stylesheet" href="{{ asset('build/app.css') }}">
        <link rel="stylesheet" href="https://bootswatch.com/4/darkly/bootstrap.min.css">
    </head>
    <body>
        {% block hero %}{% endblock %}
        <nav class="navbar navbar-expand-lg navbar-light bg-light" id="menu">
            <a class="navbar-brand" href="{{ path('home') }}">TalkingAnime</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarColor03" aria-controls="navbarColor03" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="navbarColor03">
                <ul class="navbar-nav mr-auto">
                {% set route = app.request.get('_route') %}
                    <li class="nav-item {{ 'home' in route ? 'active' }}">
                        <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                    </li>
                    <li class="nav-item {{ 'animes' in route ? 'active' }}">
                        <a class="nav-link" href="{{ path('animes') }}">Animes</a>
                    </li>
                    <li class="nav-item {{ 'mangas' in route ? 'active' }}">
                        <a class="nav-link" href="{{ path('mangas') }}">Mangas</a>
                    </li>
                    <li class="nav-item {{ 'characters' in route ? 'active' }}">
                        <a class="nav-link" href="{{ path('characters') }}">Personnages</a>
                    </li>
                    <li class="nav-item {{ 'forum' in route ? 'active' }}">
                        <a class="nav-link" href="{{ path('forum') }}">Forum</a>
                    </li>
                    <li class="nav-item {{ 'about' in route ? 'active' }}">
                        <a class="nav-link" href="{{ path('about') }}">A Propos</a>
                    </li>
                </ul>
            </div>
        </nav>
        <div class="container">
            {% block body %}{% endblock %}
        </div>
        {% block javascripts %}
        <script src="{{ asset('build/app.js') }}"></script>
        {% endblock %}
    </body>
</html>
